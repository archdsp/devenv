if [[ -x "/bin/emacs" ]]; then
    EDITOR="/usr/bin/emacs"
    FCEDIT="/usr/bin/emacs"
elif [[ -x "/bin/vim" ]]; then
    EDITOR="/usr/bin/vim"			# needed for packages like cron
elif [[ -x "/bin/vi" ]]; then
    EDITOR="usr/bin/vi"
elif [[ -x "/bin/nano" ]]; then
    EDITOR="/usr/bin/nano"			# needed for packages like cron
fi

shopt -s checkwinsize
